@page
@model BAIS3150_DemoApplication.Pages.emallo1SignOnModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>New Student</title>
        <script src="~/liberaries/jquery/jquery.js"></script>
        <script src="~/liberaries/jquery-validate/jquery.validate.js"></script>
        <script src="~/liberaries/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </head>
    <body>     
        <form name="FormSignOn" method="post" action="/">
            <table>
                <tr>
                    <h1>Sign On</h1>
                </tr>
                <tr>
                    <td>User Id: </td>
                    <td>       
                        <input asp-for="UserID" />
                        <span asp-validation-for="UserID" style="color:red; font-style:italic; font-size:small"></span>

                     </td>
                </tr>
                <tr>
                    <td>Password:</td>
                    <td>
                        <input type="password" asp-for="Password">
                        <span asp-validation-for="Password" style="color:red; font-style:italic; font-size:smaller"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="Submit" value="Submit" />
                    </td>
                </tr>
            </table>
        </form>
    </body>
</html>
